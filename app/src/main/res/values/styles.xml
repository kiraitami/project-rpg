<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorStatusBarAPI21</item>
    </style>

    <style name="CustomToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppThemeTranslucentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="AdapterTitleTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:text">Title of Item</item>
    </style>

    <style name="AdapterDescriptionTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:text">@string/description_test</item>
    </style>

    <style name="AdapterValueTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:text">44</item>
    </style>

    <style name="AdapterHintTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="BaseDetailsTextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailsValueTheme" parent="BaseDetailsTextViewTheme">
        <item name="android:maxLines">3</item>
        <item name="android:text">44</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsDescriptionTheme" parent="BaseDetailsTextViewTheme">
        <item name="android:maxLines">50</item>
        <item name="android:autoLink">all</item>
        <item name="android:text">@string/description_test</item>
    </style>


    <style name="BaseDialogButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/curved_shape</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BaseDialogEditTExt" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/curved_shape</item>
    </style>

    <style name="BaseCreateButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/btn_rounded_background</item>
        <item name="srcCompat">@drawable/ic_arrow_next</item>
    </style>

    <style name="BaseCreateEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/input_bio_curved_shape</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="ItemDescriptionEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:minLines">@integer/min_lines_item_desc</item>
        <item name="android:maxLines">@integer/max_lines_item_desc</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:background">@drawable/input_bio_curved_shape</item>
    </style>


</resources>
