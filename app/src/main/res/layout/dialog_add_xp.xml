<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="16dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/dialog_add_xp_title"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp" />


        <EditText
            android:id="@+id/dialog_add_xp_value"
            style="@style/BaseDialogEditTExt"
            android:backgroundTint="#E9F3F3F3"
            android:ems="10"
            android:hint="@string/alert_add_attr_hint_value"
            android:inputType="number"
            android:maxLength="@integer/max_length_xp_value" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/dialog_btn_xp_subtract"
                style="@style/BaseDialogButton"
                android:backgroundTint="#BEFF0048"
                android:text="@string/dialog_add_btn_subtract"
                />

            <Button
                android:id="@+id/dialog_btn_xp_add"
                style="@style/BaseDialogButton"
                android:backgroundTint="#09C2DA"
                android:text="@string/dialog_add_btn_add"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>